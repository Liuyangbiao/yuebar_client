<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp" >

        <TextView
            android:id="@+id/tv_date_successful"
            style="@style/tv_datestate_style"
            android:text="@string/date_successful" />

        <LinearLayout
            android:id="@+id/llIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_date_successful"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:visibility="gone" >
        </LinearLayout>
    </RelativeLayout>

    <com.fullteem.yueba.widget.ChildViewPager
        android:id="@+id/vp_date_successful"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tv_date_addendus"
        style="@style/tv_datestate_style"
        android:layout_marginBottom="-7dp"
        android:text="@string/date_addendus" />

</LinearLayout>