<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/size_50"
    android:layout_alignParentTop="true"
    android:background="@drawable/headerbar_bg" >

    <Button
        android:id="@+id/btn_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/public_photo"
        android:drawableLeft="@drawable/headerbar_back"
        android:drawablePadding="@dimen/size_5"
        android:drawableStart="@drawable/headerbar_back"
        android:gravity="center"
        android:padding="@dimen/size_10"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/size_18" />

    <TextView
        android:id="@+id/btn_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/size_25" />

    <TextView
        android:id="@+id/btn_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#6bcbca"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_top_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:contentDescription="@string/public_photo"
        android:gravity="center"
        android:padding="@dimen/size_5"
        android:src="@drawable/headerbar_search_icon"
        android:visibility="gone" />

</RelativeLayout>