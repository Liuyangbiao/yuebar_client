<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_myFollow"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/top_title"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_nearby_datecontent"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tv_blacktitle_style"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="@string/discover_myFollow" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitEnd"
            android:src="@drawable/right_arrow_white_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dynamic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_myFollow"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_nearby_datecontent"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tv_blacktitle_style"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="@string/discover_dynamic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitEnd"
            android:src="@drawable/right_arrow_white_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nearbyGroup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_dynamic"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_nearby_datecontent"
        android:gravity="center_vertical" >

        <TextView
            style="@style/tv_blacktitle_style"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="@string/discover_nearbyGroup" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitEnd"
            android:src="@drawable/right_arrow_white_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_nearbyGroup"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_nearby_datecontent"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/tv_blacktitle_style"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="18dp"
            android:gravity="center"
            android:text="@string/discover_luckMeet" />

        <CheckBox
            android:id="@+id/ckb_luckMeet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="@drawable/ckb_discover_luckmeet_selector"
            android:button="@null"
            android:scaleType="fitEnd" />
    </RelativeLayout>

</RelativeLayout>