<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_setVoice"
        style="@style/btn_option_item"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/img_set_voice"
        android:drawablePadding="18dp"
        android:drawableRight="@drawable/up_arrow_icon"
        android:text="@string/voice_control" />

    <LinearLayout
        android:id="@+id/ll_setvoiceControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nearby_datecontent"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/voice" />

            <CheckBox
                android:id="@+id/ckb_setVoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/ckb_discover_luckmeet_selector"
                android:button="@null"
                android:checked="true"
                android:scaleType="fitEnd" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/bg_nearby_date_dividerline" />

        <RelativeLayout
            android:id="@+id/rl_setViocePrompt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/vioce_prompt" />

            <TextView
                android:id="@+id/tv_setViocePrompt"
                style="@style/GrayWords"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:singleLine="true"
                android:text="@string/follow_system" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/bg_nearby_date_dividerline" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/vibrate" />

            <CheckBox
                android:id="@+id/ckb_setVibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/ckb_discover_luckmeet_selector"
                android:button="@null"
                android:scaleType="fitEnd" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        style="@style/btn_option_item"
        android:layout_marginTop="28dp"
        android:drawableLeft="@drawable/img_set_update"
        android:drawablePadding="18dp"
        android:drawableRight="@null"
        android:text="@string/app_update" />

    <Button
        android:id="@+id/btn_levelCharmExplain"
        style="@style/btn_option_item"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/img_set_usercp"
        android:drawablePadding="18dp"
        android:drawableRight="@null"
        android:text="@string/level_charm_explain"
        android:visibility="gone" />

</LinearLayout>