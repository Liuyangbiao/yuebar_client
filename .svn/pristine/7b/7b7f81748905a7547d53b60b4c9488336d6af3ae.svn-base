<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_wantRecharg"
        style="@style/btn_option_item"
        android:layout_marginTop="6dp"
        android:text="@string/want_recharg" />

    <Button
        android:id="@+id/btn_rechargRecords"
        style="@style/btn_option_item"
        android:layout_marginTop="6dp"
        android:drawableRight="@drawable/down_arrow_icon"
        android:text="@string/recharg_records" />

    <ListView
        android:id="@+id/lv_rechargRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nearby_datecontent"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/bg_nearby_date_dividerline"
        android:dividerHeight="0.9dp"
        android:listSelector="@color/transparent"
        android:padding="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_loadMoreRechargRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_nearbydate_details_dividerline" />

        <Button
            android:id="@+id/btn_loadMoreRechargRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_dark2light_selector"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/date_loadmore"
            android:textColor="@color/girl_red" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_rechargPreferential"
        style="@style/btn_option_item"
        android:layout_marginTop="6dp"
        android:drawableRight="@drawable/down_arrow_icon"
        android:text="@string/recharg_preferential" />

    <ListView
        android:id="@+id/lv_rechargPreferential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nearby_datecontent"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/bg_nearby_date_dividerline"
        android:dividerHeight="0.9dp"
        android:listSelector="@color/transparent"
        android:padding="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_loadMoreRechargPreferential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_nearbydate_details_dividerline" />

        <Button
            android:id="@+id/btn_loadMoreRechargPreferential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_dark2light_selector"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/date_loadmore"
            android:textColor="@color/girl_red" />
    </LinearLayout>

</LinearLayout>