<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    android:orientation="vertical" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/toptile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.fullteem.yueba.widget.CustemMapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:clickable="true" />

    <com.fullteem.yueba.widget.OverScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical" >

            <!-- 5个栏目 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/date_item_content_bg"
                android:orientation="vertical"
                android:weightSum="5" >

                <!-- 群头像 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="5" >

                        <TextView
                            style="@style/tv_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/group_header_icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4" >

                            <ImageButton
                                android:id="@+id/addGroup"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="clip_vertical"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/addgroup" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@drawable/bg_nearby_date_line" />
                </LinearLayout>

                <!-- 群地点 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="5" >

                        <TextView
                            style="@style/tv_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/group_place" />

                        <EditText
                            android:id="@+id/edtGroupPlace"
                            style="@style/edt_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:hint="@string/input_location" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@drawable/bg_nearby_date_line" />
                </LinearLayout>

                <!-- 群名称 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="5" >

                        <TextView
                            style="@style/tv_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/group_name" />

                        <EditText
                            android:id="@+id/edtGroupNickName"
                            style="@style/edt_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:hint="@string/input_nickname" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@drawable/bg_nearby_date_line" />
                </LinearLayout>

                <!-- 群人数 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="5" >

                        <TextView
                            style="@style/tv_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/group_people_num" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4" >

                            <Spinner
                                android:id="@+id/spinner"
                                style="@style/spinner_style"
                                android:layout_width="95dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:animationCache="true"
                                android:drawSelectorOnTop="true"
                                android:paddingBottom="3dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="@drawable/bg_nearby_date_line" />
                </LinearLayout>

                <!-- 群简介 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="5" >

                        <TextView
                            style="@style/tv_register_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/group_explain" />

                        <EditText
                            android:id="@+id/edtDesc"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:hint="群简介"
                            android:gravity="left"
                            android:background="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="4"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_btn_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/group_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/size_15"
                android:textStyle="bold" />
        </LinearLayout>
    </com.fullteem.yueba.widget.OverScrollView>

</LinearLayout>