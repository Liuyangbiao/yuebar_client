<?xml version="1.0" encoding="utf-8"?>
<!-- 底部菜单条 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="4" >

    <TextView
        android:id="@+id/tv_nearby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/img_main_nearby_selected"
        android:gravity="center"
        android:text="@string/nearby"
        android:textColor="@color/tv_bottom_selected"
        android:textSize="@dimen/size_13" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/img_main_message"
            android:gravity="center"
            android:text="@string/message"
            android:textColor="@color/tv_bottom_unselected"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tab_unread_bg"
            android:gravity="center"
            android:text="@string/chat_nums"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/img_main_discover"
        android:gravity="center"
        android:text="@string/discover"
        android:textColor="@color/tv_bottom_unselected"
        android:textSize="@dimen/size_13" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/img_main_personal"
            android:gravity="center"
            android:text="@string/personal"
            android:textColor="@color/tv_bottom_unselected"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/unread_msg_number_presonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tab_unread_bg"
            android:gravity="center"
            android:text="@string/chat_nums"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>