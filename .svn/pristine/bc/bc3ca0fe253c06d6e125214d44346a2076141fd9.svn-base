<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/date_item_content" >

        <RelativeLayout
            android:id="@+id/rl_myFollow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_myFollow" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/right_arrow_gray_bg" />
        </RelativeLayout>

        <View
            android:id="@+id/my_follow_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/rl_myFollow"
            android:background="@drawable/bg_nearby_date_line"/>

        <!-- hide  rl_dynamic
        <RelativeLayout
            android:id="@+id/rl_dynamic"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/my_follow_divider"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_dynamic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/right_arrow_gray_bg" />

        </RelativeLayout>
        -->
        
        <!-- nearby friend -->
        <RelativeLayout
            android:id="@+id/rl_nearbyFriend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/my_follow_divider"
            android:gravity="center_vertical" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_nearbyFriend" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/right_arrow_gray_bg" />

        </RelativeLayout>
        
        
        <!-- nearby group -->
        <View
            android:id="@+id/nearbyFriend_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/rl_nearbyFriend"
            android:background="@drawable/bg_nearby_date_line" />

        <RelativeLayout
            android:id="@+id/rl_nearbyGroup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/nearbyFriend_divider"
            android:gravity="center_vertical" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_nearbyGroup" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/right_arrow_gray_bg" />
        </RelativeLayout>
        
    
         <!-- nearby singer -->
         <View
            android:id="@+id/nearbyGroup_divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/rl_nearbyGroup"
            android:background="@drawable/bg_nearby_date_line"/>

        <RelativeLayout
            android:id="@+id/rl_nearbySinger"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/nearbyGroup_divider"
            android:gravity="center_vertical" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_nearbySinger" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/right_arrow_gray_bg" />

        </RelativeLayout>
        
        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/rl_nearbySinger"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="18dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:visibility="gone" >

            <TextView
                style="@style/tv_blacktitle_style"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="18dp"
                android:gravity="center"
                android:text="@string/discover_luckMeet" />

            <CheckBox
                android:id="@+id/ckb_luckMeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:background="@drawable/right_arrow_gray_bg"
                android:button="@null"
                android:scaleType="fitEnd" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>