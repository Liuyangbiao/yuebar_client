<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_recordsContent"
        style="@style/tv_blacktitle_style"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/records_content_normal"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recordsContent"
        android:gravity="right" >

        <TextView
            android:id="@+id/tv_recordsDate"
            style="@style/GrayWords"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="@string/date_normal"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>