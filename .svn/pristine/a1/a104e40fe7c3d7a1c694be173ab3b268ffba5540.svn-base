<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <com.fullteem.yueba.widget.TopTitleView
        android:id="@+id/toptile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 酒吧标题 -->

    <LinearLayout
        android:id="@+id/llsetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#d5d4d3"
        android:gravity="center" >

        <ImageView
            android:id="@+id/ivSetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:padding="0dp"
            android:text="@string/date_setAddress"
            android:textColor="#55c1ec" />
    </LinearLayout>

    
         <com.fullteem.yueba.widget.OverScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llsetAddress"
        android:layout_below="@id/toptile"
        android:scrollbars="none" >
   

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/firstline"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#90ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivPubHeader"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" >

                <!-- 标题 -->

                <RelativeLayout
                    android:id="@+id/title_line"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/pubName"
                        style="@style/red_common_title"
                        android:layout_centerVertical="true"
                        android:text="@string/app_name" />

                    <CheckBox
                        android:id="@+id/ckbHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@+id/pubName"
                        android:background="@drawable/ckb_heart_emptyr2full"
                        android:button="@null" />
                </RelativeLayout>

                <!-- 地址 -->

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/GrayWords"
                    android:layout_below="@+id/title_line"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/site_icon"
                    android:drawablePadding="15dp" />

                <!-- 联系方式与标签 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAddress" >

                    <TextView
                        android:id="@+id/tvPhoneNum"
                        style="@style/GrayWords"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/phone_img"
                        android:drawablePadding="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/tvPhoneNum"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal" >

                           <ImageView
                            android:id="@+id/ivBarType"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/leeshine_detail_icon"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivSingingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="12dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/leeshine_detail_icon"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--
                        <Button
                            android:id="@+id/btn_pubType"
                            style="@style/btn_bgBule2White_textWhite2Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tvPhoneNum"
                            android:paddingBottom="2dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="2dp"
                            android:text="@string/pub_type" />

                        <Button
                            android:id="@+id/btn_regularSinger"
                            style="@style/btn_bgBule2White_textWhite2Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/btn_pubType"
                            android:paddingBottom="2dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="2dp"
                            android:text="@string/pub_regularSinger" />
                    -->
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <!-- 详情 -->

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstline"
            android:background="#50ffffff"
            android:padding="15dp"
            android:textColor="@color/black" />

        <!-- 酒吧环境 -->

        <LinearLayout
            android:id="@+id/llPubEnvironment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDetail"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvpPubEnvironment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:padding="15dp"
                android:text="@string/pub_environment"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13" />

                <!-- <com.fullteem.yueba.widget.InScrollListView
                    android:id="@+id/lvPubEnvironment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_nearby_datecontent"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@color/transparent"
                    android:dividerHeight="5dp"
                    android:listSelector="@color/transparent" >
                </com.fullteem.yueba.widget.InScrollListView> -->
                
                <com.fullteem.yueba.widget.ChildViewPager
                    android:id="@+id/vp_pub_environment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" >
                </com.fullteem.yueba.widget.ChildViewPager>

            </LinearLayout>

        <!-- 驻唱歌手 -->

        <LinearLayout
            android:id="@+id/llPubSinger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPubEnvironment"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:padding="15dp"
                android:text="@string/pub_singer"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13" />

            <com.fullteem.yueba.widget.InScrollListView
                android:id="@+id/lvSinger"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nearby_datecontent"
                android:cacheColorHint="@color/transparent"
                android:divider="@drawable/bg_nearby_date_dividerline"
                android:dividerHeight="1dp"
                android:listSelector="@color/transparent" >
            </com.fullteem.yueba.widget.InScrollListView>
        </LinearLayout>

        <!-- 促销 -->

        <LinearLayout
            android:id="@+id/llPubSales"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPubSinger"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:padding="15dp"
                android:text="@string/pub_sales"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13" />

            <com.fullteem.yueba.widget.InScrollListView
                android:id="@+id/lvSales"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nearby_datecontent"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:listSelector="@color/transparent" >
            </com.fullteem.yueba.widget.InScrollListView>
        </LinearLayout>

        <!-- 套餐选择 -->

        <LinearLayout
            android:id="@+id/llSelectPackage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPubSales"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:padding="15dp"
                android:text="@string/pub_selectPackage"
                android:textColor="@color/black"
                android:textSize="@dimen/size_13" />

            <com.fullteem.yueba.widget.InScrollListView
                android:id="@+id/lvSelectPackage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nearby_datecontent"
                android:cacheColorHint="@color/transparent"
                android:divider="@drawable/bg_nearby_date_dividerline"
                android:dividerHeight="1dp"
                android:listSelector="@color/transparent" >
            </com.fullteem.yueba.widget.InScrollListView>
        </LinearLayout>
    </RelativeLayout>
    </com.fullteem.yueba.widget.OverScrollView>

</RelativeLayout>